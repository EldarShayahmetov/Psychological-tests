unit Result;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls, Vcl.Buttons;

type
  TFResult = class(TForm)
    Panel1: TPanel;
    Panel2: TPanel;
    Panel3: TPanel;
    Bevel1: TBevel;
    L1: TLabel;
    BitBtn1: TBitBtn;
    Label1: TLabel;
    procedure FormActivate(Sender: TObject);
    procedure FormKeyPress(Sender: TObject; var Key: Char);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FResult: TFResult;

implementation

{$R *.dfm}

uses Test, Variable;

procedure TFResult.FormActivate(Sender: TObject);
begin
  SetBounds( Left - ClientOrigin.X, Top - ClientOrigin.Y, GetDeviceCaps(
 Canvas.handle, HORZRES ) + (Width - ClientWidth), GetDeviceCaps( Canvas.handle,VERTRES )
 + (Height - ClientHeight ));

 Bevel1.Width := ClientWidth div 2;
 Bevel1.Left := (ClientWidth div 2)-(Bevel1.Width div 2);
 L1.Left := ((Bevel1.Left + Bevel1.Width) div 2);
  Label1.Left := ((Bevel1.Left + Bevel1.Width) div 2);
 BitBtn1.Left := (ClientWidth div 2)-(BitBtn1.Width div 2);

L1.Caption:= 'Ваш результат Тревоги= '+inttostr(All);

if ALL<=5 then Label1.Caption :='Низкий уровень тревоги';
if (ALL>5) and (ALL<=15) then Label1.Caption :='Средний (низкая тенденция) уровень тревоги';
if (ALL>15) and (ALL<=25) then Label1.Caption :='Средний (высокая тенденция) уровень тревоги';
if (ALL>25) and (ALL<=40) then Label1.Caption :='Высокий уровень тревоги';
if (ALL>40) and (ALL<=60) then Label1.Caption :='Очень высокий уровень тревоги';

Panel1.Caption := 'Результат '+SN;
end;

procedure TFResult.FormKeyPress(Sender: TObject; var Key: Char);
begin
If Key = '0' then BitBtn1.Click;
end;

end.
